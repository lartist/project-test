{% extends 'base.html.twig' %}

{% block title %}CallForProjects{% endblock %}

{% block body %}
    <h1>CallForProjects</h1>

    <table class="table">
        <tbody>
            <tr>
                <th>Id</th>
                <td>{{ call_for_project.id }}</td>
            </tr>
            <tr>
                <th>Label</th>
                <td>{{ call_for_project.label }}</td>
            </tr>
        </tbody>
    </table>

    <a href="{{ path('call_for_projects_index') }}">back to list</a>

    <a href="{{ path('call_for_projects_edit', {'id': call_for_project.id}) }}">edit</a>

    {{ include('call_for_projects/_delete_form.html.twig') }}

    <a href="{{ path('call_for_projects_add_project', { id : call_for_project.id}) }}">Ajouter un projet</a>

    <table>
        <tbody>
        {% for project in call_for_project.projects  %}
            <tr>
                <td>
                    <a href="{{ path('project_edit', {'id' : project.id}) }}">{{ project.label }}</a>
                </td>
            </tr>
        {% endfor %}
        </tbody>
    </table>

{% endblock %}
